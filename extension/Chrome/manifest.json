{
  "manifest_version": 3,
  "name": "Zandar",
  "description": "A calm, local-first startpage for your new tab",
  "version": "0.1.0",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "action": {
    "default_popup": "/popup.html",
    "default_title": "Save to Zandar"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*", "https://zandar.site/*", "https://www.zandar.site/*"],
      "js": ["content-script.js"]
    }
  ]
}
